---
import links from "./../../data/navigation";
interface Props {
  option: string;
}
const { option } = Astro.props;
---

<nav>
  <div class="nav__content">
    <a class="logo" href="/">MB.</a>

    <div class="nav-links">
      {
        links?.map((link) => {
          return (
            <a href={link.href} class={option == link.title ? "active" : ""}>
              {link.title}
            </a>
          );
        })
      }
    </div>

    <a href="/" class="cta">Sa Incepem</a>
  </div>
</nav>

<style lang="scss">
  @use "./../../style/index.scss" as *;
  nav {
    box-shadow: 0px 20px 20px 0px rgba(128, 114, 154, 0.2);

    .nav__content {
      @extend %max-content-width;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding-top: 1rem;
      padding-bottom: 1rem;

      a {
        text-decoration: none;
        color: $cl-black;

        &.logo {
          @extend %text;
        }
      }

      .nav-links {
        display: flex;
        gap: 2rem;

        a {
          @extend %sub-text;

          &.active {
            color: $cl-primary;
            font-weight: bold;
            border-bottom: 2px solid $cl-primary;
          }
        }
      }

      .cta {
        @extend %cta;
      }
    }
  }
</style>
